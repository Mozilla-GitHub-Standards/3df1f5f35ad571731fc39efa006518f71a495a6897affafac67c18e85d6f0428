{
  "name": "nsf-challenge",
  "repository": "https://github.com/mozilla/nsf-challenge",
  "issues": "https://github.com/mozilla/nsf-challenge/issues",
  "version": "1.0.0",
  "description": "NSF Challenge",
  "scripts": {
    "autoprefix": "node scripts/autoprefix.js",
    "build:images": "shx rm -rf dest/_images && shx cp -r source/images dest/_images",
    "build:assets": "shx rm -rf dest/_assets && shx cp -r source/assets dest/_assets",
    "build:js": "shx mkdir -p dest/_js && webpack",
    "build:pug": "node scripts/build-pug.js",
    "build:sass": "shx mkdir -p dest/_css && node-sass source/sass/main.scss dest/_css/main.compiled.css && npm run autoprefix",
    "build": "shx rm -rf dest && run-p build:**",
    "server": "live-server ./dest --port=2017",
    "stage": "npm i && shx rm -rf dest && npm run build:pug -- --staging && npm run build:images && npm run build:assets && npm run build:js && npm run build:sass && node scripts/stage.js",
    "start": "npm i && npm run build && run-p server watch:**",
    "test:eslint": "eslint --config ./.eslintrc.yaml scripts/**/*.js source/js/**/*.js",
    "test:pug": "pug-lint source/pug/**/*.pug",
    "test:scss": "stylelint 'source/sass/**/*.scss' --syntax scss",
    "test": "run-s test:**",
    "watch:images": "chokidar 'source/images/*' -c 'npm run build:images'",
    "watch:assets": "chokidar 'source/assets/*' -c 'npm run build:assets'",
    "watch:js": "chokidar 'source/js/**/*.js' -c 'npm run build:js'",
    "watch:pug": "chokidar 'source/pug/**/*.pug' -c 'npm run build:pug'",
    "watch:sass": "chokidar 'source/sass/**/*.scss' -c 'npm run build:sass'"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "java.properties.js": "^1.0.2",
    "jstransformer-markdown": "^1.1.0",
    "live-server": "^1.2.0",
    "mofo-style": "^2.4.0",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.0",
    "postcss": "^5.2.10",
    "postcss-cli": "^2.3.3",
    "pug": "^2.0.0-beta5",
    "pug-lint": "^2.3.0",
    "raw-loader": "^0.5.1",
    "shelljs": "^0.7.6",
    "shx": "^0.2.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "json-loader": "^0.5.4",
    "mofo-bootstrap": "3.1.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-markdown": "^2.4.4"
  },
  "pugLintConfig": {
    "disallowHtmlText": true,
    "disallowIdAttributeWithStaticValue": true,
    "disallowMultipleLineBreaks": true,
    "requireClassLiteralsBeforeAttributes": true,
    "validateIndentation": 2,
    "validateLineBreaks": "LF"
  }
}
